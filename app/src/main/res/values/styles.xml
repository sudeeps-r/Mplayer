<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="contentInsetStart">0dp</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/color_lt_black</item>

    </style>

    <style name="edit_text.album_search">
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:drawablePadding">@dimen/splash_search_drawable_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/darker_gray</item>
        <item name="android:background">@drawable/white_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:hint">@string/splash.search.hint</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="item_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/d_darker_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
</resources>
